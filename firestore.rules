rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own data
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow users to read and write their own user tag
    match /userTags/{userTag} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow users to read and write posts
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
      
      // Allow users to read and write comments on posts
      match /comments/{commentId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
      
      match /likes/{likeId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
  }
} 